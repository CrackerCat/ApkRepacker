    <style name="AppTheme.Simple.Light" parent="AppTheme.Light">
        <item name="colorPrimary">?attr/simpleThemePrimaryColor</item>
        <item name="colorPrimaryDark">?attr/simpleThemePrimaryColor</item>
        <item name="colorAccent">?attr/simpleThemeAccentColor</item>
        <item name="android:statusBarColor">?attr/simpleThemePrimaryColor</item>
        <item name="android:windowBackground">?attr/simpleThemePrimaryColor</item>
        <item name="titleTextColor">?attr/simpleThemeTextPrimaryColor</item>
        <item name="android:textColorPrimary">?attr/simpleThemeTextPrimaryColor</item>
        <item name="android:textColorSecondary">?attr/simpleThemeTextSecondaryColor</item>
        <item name="alertDialogTheme">@style/AlertDialog.AppTheme.Light</item>
    </style>

    <style name="AppTheme.Rena" parent="AppTheme.Simple.Dark">
        <item name="simpleThemePrimaryColor">@color/colorPrimaryRena</item>
        <item name="simpleThemePrimaryLightColor">@color/colorPrimaryLightRena</item>
        <item name="simpleThemeAccentColor">@color/colorAccentRena</item>
        <item name="simpleThemeTextPrimaryColor">@color/colorTextPrimaryRena</item>
        <item name="simpleThemeTextSecondaryColor">@color/colorTextSecondaryRena</item>
    </style>

    <style name="AppTheme.RenaLight" parent="AppTheme.Simple.Light">
        <item name="simpleThemePrimaryColor">@color/colorPrimaryRenaLight</item>
        <item name="simpleThemePrimaryLightColor">@color/colorPrimaryLightRenaLight</item>
        <item name="simpleThemeAccentColor">@color/colorAccentRenaLight</item>
        <item name="simpleThemeTextPrimaryColor">@color/colorTextPrimaryRenaLight</item>
        <item name="simpleThemeTextSecondaryColor">@color/colorTextSecondaryRenaLight</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/light_accent</item>
        <item name="colorPrimaryDark">@color/light_accent</item>
        <item name="colorAccent">@color/light_accent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowBackground">#00000000</item>
        <item name="android:statusBarColor">#00000000</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:navigationBarColor">@color/light_primary</item>
        <item name="bottomSheetStyle">@style/BottomSheetDialogStyle</item>
    </style>
</resources>