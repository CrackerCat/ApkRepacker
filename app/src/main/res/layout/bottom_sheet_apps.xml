<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/decompile_app"
        style="@style/ActionItem"
        android:drawableStart="@drawable/ic_decompile"
        android:text="@string/decompile_app"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/simple_edit_apk"
        style="@style/ActionItem"
        android:drawableStart="@drawable/ic_rename"
        android:text="@string/simple_edit_app"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/decompile_app" />

    <TextView
        android:id="@+id/uninstall_app"
        style="@style/ActionItem"
        android:drawableStart="@drawable/ic_delete"
        android:text="@string/action_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/simple_edit_apk" />

    <TextView
        android:id="@+id/goto_settings_app"
        style="@style/ActionItem"
        android:drawableStart="@drawable/ic_open_app_in_settings"
        android:text="@string/open_app_in_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uninstall_app" />

</LinearLayout>
