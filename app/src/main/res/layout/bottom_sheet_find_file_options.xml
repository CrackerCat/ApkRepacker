<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/open_with"
        style="@style/ActionItem"
        android:drawableStart="@drawable/ic_open_with"
        android:text="@string/action_open_with" />

    <TextView
        android:id="@+id/open_in_editor"
        style="@style/ActionItem"
        android:drawableStart="@drawable/ic_rename"
        android:text="@string/action_open_in_editor" />

    <TextView
        android:id="@+id/copy_path"
        style="@style/ActionItem"
        android:drawableStart="@drawable/ic_copy"
        android:text="@string/action_copy_path" />

    <TextView
        android:id="@+id/replace_in_file"
        style="@style/ActionItem"
        android:drawableStart="@drawable/ic_find_replace"
        android:text="@string/action_replace_panel"
        android:visibility="gone" />

</LinearLayout>